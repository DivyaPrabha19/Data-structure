#include <stdio.h>
#include <stdlib.h>

int binarySearch(int *arr, int n, int target) {
    int low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (arr[mid] == target) return mid;
        else if (arr[mid] < target) low = mid + 1;
        else high = mid - 1;
    }
    return -1;
}

int main() {
    int n, target;
    printf("Enter number of student records: ");
    scanf("%d", &n);
    int *studentIDs = malloc(n * sizeof(int));

    printf("Enter student IDs:\n");
    for (int i = 0; i < n; i++) scanf("%d", &studentIDs[i]);
    printf("Enter student ID to search for: ");
    scanf("%d", &target);

    int result = binarySearch(studentIDs, n, target);
    if (result != -1) printf("Student ID %d found at index %d\n", target, result);
    else printf("Student ID %d not found.\n", target);

    free(studentIDs);
    return 0;
}
OUTPUT:
Enter number of student records: 5
Enter student IDs:
101 202 303 404 505
Enter student ID to search for: 303
Student ID 303 found at index 2

